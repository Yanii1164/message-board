<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
      <% @messages.each do |message| %>
      <span class="label label-primary"><%= message.age %>歳</span>
      <span class="label label-success"><%= message.name %></span>
      <%= message.body %>
      [ <%= link_to "編集" , edit_message_path(message) %> / <%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %> ]
      <br>
      <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる テスト2%>


<%= form_for(Message.new) do |f| %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="panel panel-primary">
   <div class="panel-heading">
    メッセージ入力（＊必須）
   </div>
  
    <br>  
    <p>&nbsp;<u>*名前（Name）</u></p>
    &nbsp;<%= f.text_field :name %>
    <br><br>
  
    <p>&nbsp;<u>*年齢（Age）半角入力 </u></p>
    &nbsp;<%= f.text_field :age %>
    <br><br>
  
    <p>&nbsp;<u>*内容（Contents）＜フォーム拡張可能＞</u></p>
    &nbsp;<%= f.text_area :body, cols: 100 %>
  
    <br>
    &nbsp;<%= f.submit class: "btn btn-sm btn-warning" %>
    <br><br>
    
  </div>
<% end %>
